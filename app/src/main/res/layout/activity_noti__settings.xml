<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Noti_Settings">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/phone"
        android:alpha="0.25">
    </ImageView>
    <TextView
        android:id="@+id/warning"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:paddingTop="100dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"

        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="20sp"

        android:text="If you are not receiving the notifications when app is closed, then follow the instructions below:\n\nFor Xiaomi and Vivo phones : Go to App Settings and enable Autostart\n\nFor Oppo phones : Go to app settings and enable auto startup\n\nFor phones running on Stock Android or Oxygen OS or other OEMs: Disable battery optimisation in the app settings "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.551"/>

</androidx.constraintlayout.widget.ConstraintLayout>