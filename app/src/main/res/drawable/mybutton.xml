<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="12dip" />
            <stroke android:width="1dip" android:color="#2F97F8" />
            <gradient android:angle="-90" android:startColor="#B52C71EC" android:endColor="#5D6AE6"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="12dip" />
            <stroke android:width="1dip" android:color="#2885E0" />
            <solid android:color="#23A3DD"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="24dip" />
            <stroke android:width="1dip" android:color="#2E9AE9" />
            <gradient android:angle="-90" android:startColor="#1C7DE2" android:endColor="#08B2B8" />
        </shape>
    </item>
</selector>